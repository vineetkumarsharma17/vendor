<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Grocery" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_marginTop="10dp"
                android:text="Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:id="@+id/ed0b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Menu Group" />

            <EditText
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:id="@+id/ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Product Name" />

            <EditText
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:id="@+id/ed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Details" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:background="@drawable/borderall"
                    android:padding="8dp"
                    android:id="@+id/ed3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:hint="Sales Price" />

                <EditText
                    android:background="@drawable/borderall"
                    android:padding="8dp"
                    android:id="@+id/ed4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:hint="Size" />
            </LinearLayout>

            <EditText
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:id="@+id/mrpprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="MRP" />

            <EditText
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:inputType="number"
                android:id="@+id/packingcharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Packing Charge" />
            <EditText
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:id="@+id/ed7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Description"
                android:inputType="textMultiLine" />

            <EditText
                android:clickable="true"
                android:focusable="false"
                android:background="@drawable/borderall2"
                android:padding="8dp"
                android:id="@+id/imgchooser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Select Image"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/imagselected"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />
            <Button
                android:id="@+id/btn1"
                android:text="Update"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv1"
                android:textColor="#f30"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>