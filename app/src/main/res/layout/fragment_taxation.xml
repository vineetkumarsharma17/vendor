<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taxation Detail"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/borderall"
                    android:hint="GST No"
                    android:padding="10dp"
                    android:textSize="13dp" />
            </android.support.design.widget.TextInputLayout>

            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/ed5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall2"
                android:hint="Select GST Image"
                android:padding="10dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/ed6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/borderall"
                    android:hint="Pan card No"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="13dp" />
            </android.support.design.widget.TextInputLayout>


            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/ed51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall2"
                android:hint="Select Pan Image"
                android:padding="10dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/ed61"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />


            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/ed71"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall2"
                android:hint="Select FSSAI No Image"
                android:padding="10dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/ed72"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>