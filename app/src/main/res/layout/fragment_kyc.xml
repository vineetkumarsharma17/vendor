<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identity Information"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/ed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall"
                android:entries="@array/idtype"
                android:padding="10dp"
                android:textSize="13dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/borderall"
                    android:hint="Full Name As id"
                    android:padding="10dp"
                    android:textSize="13dp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/borderall"
                    android:hint="ID No"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="13dp" />
            </android.support.design.widget.TextInputLayout>



            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/ed5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall2"
                android:hint="Select Image of above mentioned id"
                android:padding="10dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/ed6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />

            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/ed7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall2"
                android:hint="Select Image of FSSAI Image"
                android:padding="10dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/ed8"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />

            <EditText
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/ed9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderall2"
                android:hint="Select Image of PAN CARD"
                android:padding="10dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/ed10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp" />
            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>