<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ddd"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:text="Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed1"
            android:hint="company name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed2"
            android:hint="Contact No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed3"
            android:hint="Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed4"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed5"
            android:hint="City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:background="@drawable/borderall"
            android:entries="@array/india_states"
            android:layout_margin="5dp"
            android:id="@+id/ed6"
            android:hint="State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed7"
            android:hint="Pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_principal9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/borderall"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:id="@+id/ed8"
            android:hint="GST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@drawable/borderall"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:id="@+id/ed9"
                android:hint="FSSAI No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:paddingBottom="8dp"
                android:id="@+id/simpleSwitch0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:text="Restaurant"
                android:gravity="left"/>
            <Switch
                android:paddingBottom="8dp"
                android:id="@+id/simpleSwitch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:text="Tiffin"
                android:gravity="left"/>
            <Switch
                android:paddingBottom="8dp"
                android:id="@+id/simpleSwitch2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:text="Party"
                android:gravity="left"/>
            <Switch
                android:paddingBottom="8dp"
                android:id="@+id/simpleSwitch3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:text="Medicated"
                android:gravity="left"/>
            <Switch
                android:paddingBottom="8dp"
                android:id="@+id/simpleSwitch4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOff="No"
                android:textOn="Yes"
                android:text="Grocery"
                android:gravity="left"/>
        </LinearLayout>

        <Button
            android:text="Update"
            android:id="@id/btn1"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#f30"
            android:layout_marginTop="15dp"
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
</ScrollView>